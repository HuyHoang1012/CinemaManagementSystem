<UserControl x:Class="CinemaManagementSystem.DashboardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CinemaManagementSystem"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#3B82F6" CornerRadius="10" Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Total Movies" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtMoviesCount" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Background="#10B981" CornerRadius="10" Margin="10" Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Showtimes Today" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtShowtimesToday" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Background="#F59E0B" CornerRadius="10" Margin="10" Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Tickets Sold Today" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtTicketsToday" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Background="#EF4444" CornerRadius="10" Margin="10" Grid.Row="1" Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Revenue Today" FontSize="20" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtRevenueToday" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
